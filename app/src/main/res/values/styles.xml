<resources>

    <!-- Base application theme. -->
    <style name="Locky.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--
            Application's Theme
        -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorAccentDark">@color/colorAccentDark</item>
        <item name="colorAccentLight">@color/colorAccentLight</item>
        <item name="colorRipple">@color/colorRipple</item>
        <item name="android:listDivider">@android:color/transparent</item>

        <item name="actionOverflowButtonStyle">@style/Locky.Icon.Overflow</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!--
            Navigation Drawer Theme
        -->
        <item name="colorNavigationItem">@color/color_state_drawer_item</item>
        <item name="colorNavigationItemSelected">@android:color/white</item>
        <item name="drawableNavigationItemBackground">@drawable/custom_drawer_background</item>

        <item name="drawerArrowStyle">@style/Locky.Icon.Drawer.Hamburger</item>

        <item name="android:buttonBarPositiveButtonStyle">@style/Locky.Button.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Locky.Button.Negative</item>

    </style>

    <!-- Splash Launcher UI theme. -->
    <style name="Locky.Theme.Launcher" parent="Locky.Theme">
        <item name="android:windowBackground">@drawable/custom_background_launcher</item>
    </style>

    <!-- Firebase UI theme. -->
    <style name="Locky.Theme.Launcher.FirebaseUI" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/colorAccentDark</item>
        <item name="colorControlActivated">@color/colorAccentDark</item>
        <item name="colorControlHighlight">@color/colorAccentDark</item>

        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Locky.ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!-- Navigation -->
    <style name="Locky.Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

    <!--
    *********************** App Icons ***********************
    -->
    <style name="Locky.Icon.Drawer.Hamburger" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorIcon</item>
    </style>

    <style name="Locky.Icon.Overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorIcon</item>
    </style>


    <!--
         *********************** Text Box ***********************
     -->
    <style name="Locky.TextBox.Default" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:theme">@style/Locky.TextBox.TextAppearance</item>
        <item name="hintTextColor">@color/colorTextFieldTextDefault</item>
        <item name="boxStrokeColor">@color/color_state_textfield_border</item>
        <item name="startIconTint">@color/colorTextFieldIconDefault</item>
        <item name="endIconTint">@color/colorTextFieldIconDefault</item>
        <item name="counterMaxLength">150</item>

        <!-- Error fields theme-->
        <item name="boxStrokeErrorColor">@color/colorTextFieldErrorDefault</item>
        <item name="errorIconTint">@color/colorTextFieldErrorDefault</item>
        <item name="errorTextColor">@color/colorTextFieldErrorDefault</item>
    </style>

    <style name="Locky.TextBox.TextAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/colorTextFieldAccentDefault_Active</item>
        <item name="colorControlActivated">@color/colorTextFieldAccentDefault_Active</item>
        <item name="colorControlHighlight">@color/colorTextFieldAccentDefault_Active</item>

        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:fontFamily">@font/rubik_medium</item>

        <item name="android:textColorHint">@color/colorTextFieldIconDefault</item>
        <item name="android:textColor">@color/colorTextFieldTextDefault</item>
        <item name="android:textSize">13sp</item>

        <item name="shapeAppearanceSmallComponent">@style/Locky.ShapeAppearance.App.SmallComponent
        </item>
    </style>

    <style name="Locky.TextBox.Default.Search">
        <item name="boxStrokeColor">@color/colorTextFieldAccentSearch</item>
        <item name="android:background">@drawable/custom_background_edittext_search</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/colorTextFieldAccentSearch</item>
        <item name="android:textColor">@color/colorTextFieldAccentSearch</item>
        <item name="android:textColorHint">@color/colorTextFieldAccentSearch</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!--
        *********************** Buttons ***********************
    -->
    <style name="Locky.FloatingActionButton.Normal" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/colorFabNormal</item>
        <item name="fabSize">normal</item>
        <item name="borderWidth">0dp</item>
        <item name="tint">@color/colorIconFabNormal</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <style name="Locky.FloatingActionButton.Mini" parent="Locky.FloatingActionButton.Normal">
        <item name="android:backgroundTint">@color/colorFabMini</item>
        <item name="tint">@color/colorIconFabMini</item>
        <item name="elevation">8dp</item>
        <item name="fabSize">mini</item>
    </style>

    <style name="Locky.FloatingActionButton.Authentication" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="fabSize">normal</item>
        <item name="borderWidth">2dp</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="tint">@color/colorAccent</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Locky.Button.Theme" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceSmallComponent">@style/Locky.ShapeAppearance.App.SmallComponent
        </item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="Locky.Button.Positive" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Locky.Button.Negative" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorButtonTextNegative</item>
    </style>

    <style name="Locky.Button.Default" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:textColor">@color/colorButtonTextAccentPrimary</item>
        <item name="strokeColor">@color/colorButtonTextAccentPrimary</item>
        <item name="iconTint">@color/colorButtonTextAccentPrimary</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="iconPadding">12dp</item>
        <item name="android:padding">13dp</item>
    </style>

    <style name="Locky.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorAccentDark</item>
        <item name="iconTint">@color/colorAccentDark</item>
        <item name="backgroundTint">@color/colorAccentLight</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="iconPadding">12dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Locky.Button.Filled.Delete">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorButtonDelete</item>
        <item name="iconTint">@android:color/white</item>
        <item name="android:padding">8dp</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="Locky.Button.Splash" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="elevation">12dp</item>
    </style>

    <style name="Locky.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorButtonTextAccentSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="rippleColor">@color/colorRipple</item>
    </style>

    <style name="Locky.Button.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/color_state_chip_item_text</item>
        <item name="chipBackgroundColor">@color/color_state_chip_item_background</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="chipCornerRadius">5dp</item>
    </style>

    <!--
     *********************** Typography ***********************
     -->

    <style name="Locky.Text.Splash.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="fontFamily">@font/google_sans_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>

    <style name="Locky.Text.Splash.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="fontFamily">@font/google_sans_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextSubtitle</item>
    </style>


    <style name="Locky.Text.Toolbar.TitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/musket_regular</item>
        <item name="fontFamily">@font/musket_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextTitleAccent</item>
    </style>

    <style name="Locky.Text.Drawer.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorTextTitleAccent</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/musket_regular</item>
        <item name="android:fontFamily">@font/musket_regular</item>
    </style>

    <style name="Locky.Text.Drawer.Item" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="Locky.Text.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="Locky.Text.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorTextSubtitle</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Locky.Text.Title.List">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Locky.Text.Subtitle.List">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextSubtitle</item>
    </style>

    <style name="Locky.Text.Label" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Locky.Text.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>

    <style name="Locky.Text.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="fontFamily">@font/google_sans_medium</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
