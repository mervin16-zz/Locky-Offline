<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="Card"
            type="com.th3pl4gu3.locky.core.Card" />
    </data>

    <LinearLayout
        android:id="@+id/Layout_Credential_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/Card_Logo_Type"
            cardLogo="@{Card.number}"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            tools:src="@drawable/image_placeholder_logo" />

        <TextView
            android:id="@+id/Card_Number"
            cardNumber="@{Card.number}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            tools:text="Title"
            style="@style/Locky.TextAppearance.Title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerView_Credentials_Field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:nestedScrollingEnabled="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>

</layout>