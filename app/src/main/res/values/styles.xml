<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorAccentDark">@color/colorAccentDark</item>
        <item name="colorAccentLight">@color/colorAccentLight</item>
        <item name="colorRipple">@color/colorRipple</item>

        <item name="android:listDivider">@android:color/transparent</item>

        <item name="actionOverflowButtonStyle">@style/Locky.Icon.Overflow</item>

        <!-- Navigation Drawer -->
        <item name="colorNavigationItem">@color/color_state_drawer_item</item>
        <item name="colorNavigationItemSelected">@android:color/white</item>
        <item name="drawableNavigationItemBackground">@drawable/custom_drawer_background</item>

        <item name="drawerArrowStyle">@style/Locky.Icon.Drawer.Hamburger</item>

        <item name="android:buttonBarPositiveButtonStyle">@style/Locky.Button.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Locky.Button.Negative</item>
    </style>

    <style name="Locky.Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>


    <!--
    *********************** App Icons ***********************
    -->
    <style name="Locky.Icon.Drawer.Hamburger" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorIcon</item>
    </style>

    <style name="Locky.Icon.Overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorIcon</item>
    </style>

    <!--
     *********************** Typography ***********************
     -->
    <style name="Locky.Toolbar.TitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="fontFamily">@font/google_sans_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextTitleAccent</item>
    </style>

    <style name="Locky.TextAppearance.Screen.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorTextTitleAccent</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/musket_regular</item>
        <item name="android:fontFamily">@font/musket_regular</item>
    </style>

    <style name="Locky.TextAppearance.Drawer.Item" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="Locky.TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>

    <style name="Locky.TextAppearance.List.Title" parent="Locky.TextAppearance.Title">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="fontFamily">@font/google_sans_medium</item>
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Locky.TextAppearance.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorTextSubtitle</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Locky.TextAppearance.List.Subtitle" parent="Locky.TextAppearance.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextSubtitle</item>
    </style>

    <style name="Locky.TextAppearance.Label" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Locky.TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>

    <!--
        *********************** Buttons ***********************
    -->
    <style name="Locky.FloatingActionButton.Normal" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/colorFabNormal</item>
        <item name="fabSize">normal</item>
        <item name="borderWidth">0dp</item>
        <item name="tint">@color/colorIconFabNormal</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <style name="Locky.FloatingActionButton.Mini" parent="Locky.FloatingActionButton.Normal">
        <item name="tint">@color/colorIconFabMini</item>
        <item name="android:backgroundTint">@color/colorFabMini</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="Locky.Button.Positive" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Locky.Button.Negative" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/grey_400</item>
    </style>

    <style name="Locky.Button.Default" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="iconTint">@color/colorAccent</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="iconPadding">12dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Locky.Button.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/color_state_chip_item_text</item>
        <item name="chipBackgroundColor">@color/color_state_chip_item_background</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="chipCornerRadius">5dp</item>
    </style>


    <!--
         *********************** Text Box ***********************
     -->
    <style name="Locky.TextBox.Default" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
    </style>

    <style name="Locky.TextAppearance.TextBox.Hint" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
