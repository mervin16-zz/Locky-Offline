<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ViewModel"
            type="com.th3pl4gu3.locky.ui.main.add.account.AddAccountViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".ui.main.add.account.AddAccountFragment">

        <!--****************************** LOGO ****************************** -->
        <ImageView
            android:id="@+id/Account_Logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            bindLogoImage="@{ViewModel.logoUrl}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/image_placeholder_logo" />


        <!--****************************** Required Label ****************************** -->
        <TextView
            android:id="@+id/Label_Required"
            style="@style/Locky.TextAppearance.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/label_required"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Account_Logo" />

        <!--****************************** Name Text field ****************************** -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Account_Name"
            style="@style/Locky.TextBox.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/field_account_name"
            app:layout_constraintEnd_toEndOf="@id/Account_Logo"
            app:layout_constraintStart_toStartOf="@id/Account_Logo"
            app:layout_constraintTop_toBottomOf="@id/Label_Required">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{ViewModel.name}" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--****************************** Username Text field ****************************** -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Account_Username"
            style="@style/Locky.TextBox.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/field_account_username"
            app:layout_constraintTop_toBottomOf="@+id/Account_Name">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{ViewModel.username}" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--****************************** Email Text field ****************************** -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Account_Email"
            style="@style/Locky.TextBox.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/field_account_email"
            app:errorEnabled="true"
            app:layout_constraintTop_toBottomOf="@+id/Account_Username">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:text="@{ViewModel.email}" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--****************************** Password Text field ****************************** -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Account_Password"
            style="@style/Locky.TextBox.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/field_account_password"
            app:layout_constraintTop_toBottomOf="@+id/Account_Email"
            tools:layout_editor_absoluteX="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:text="@{ViewModel.password}" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--****************************** Website Text field ****************************** -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Account_Website"
            style="@style/Locky.TextBox.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/field_account_website"
            app:layout_constraintTop_toBottomOf="@+id/Account_Password">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textWebEditText"
                android:text="@{ViewModel.website}" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--****************************** Optional Label ****************************** -->
        <TextView
            android:id="@+id/Label_Optional"
            style="@style/Locky.TextAppearance.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/label_optional"
            app:layout_constraintStart_toStartOf="@id/Label_Required"
            app:layout_constraintTop_toBottomOf="@id/Account_Website" />


        <!--****************************** 2FA Enabled Text field ****************************** -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Account_2FA_Enabled"
            style="@style/Locky.TextBox.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/field_account_2faauth"
            app:layout_constraintTop_toBottomOf="@+id/Label_Optional">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textShortMessage"
                android:text="@{ViewModel.twoFaEnabled}" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--****************************** 2FA Secret Keys Text field ****************************** -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Account_2FA_Keys"
            style="@style/Locky.TextBox.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/field_account_2fakeys"
            app:layout_constraintTop_toBottomOf="@+id/Account_2FA_Enabled">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:text="@{ViewModel.twoFaKeys}"
                android:maxLines="15"
                android:minLines="2" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--****************************** Additional Comments Text field ****************************** -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Account_Comments"
            style="@style/Locky.TextBox.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/field_account_additional"
            app:layout_constraintTop_toBottomOf="@+id/Account_2FA_Keys">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:text="@{ViewModel.additionalInfo}"
                android:maxLines="15"
                android:minLines="2" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--****************************** Save Button ****************************** -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Button_Save"
            style="@style/Locky.Button.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/button_action_save"
            app:icon="@drawable/ic_save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Account_Comments" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>