<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="Card"
            type="com.th3pl4gu3.locky.core.Card" />

        <variable
            name="ClickListener" type="com.th3pl4gu3.locky.ui.main.CardClickListener"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> ClickListener.onClick(Card)}">

        <ImageView
            android:id="@+id/Card_Logo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            cardLogo="@{Card.number}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Card_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            cardNumber="@{Card.number}"
            app:layout_constraintBottom_toTopOf="@id/Card_ExpirateDate"
            app:layout_constraintStart_toEndOf="@+id/Card_Logo"
            app:layout_constraintTop_toTopOf="@+id/Card_Logo"
            app:layout_constraintVertical_chainStyle="spread"
            style="@style/Locky.TextAppearance.List.Title"
            tools:text="4850 XXXX XXXX XXXX" />

        <TextView
            android:id="@+id/Card_ExpirateDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="expiration date: 12/20"
            app:layout_constraintBottom_toBottomOf="@+id/Card_Logo"
            app:layout_constraintStart_toStartOf="@+id/Card_Number"
            app:layout_constraintTop_toBottomOf="@+id/Card_Number"
            style="@style/Locky.TextAppearance.List.Subtitle"
            tools:text="MM/YY" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>