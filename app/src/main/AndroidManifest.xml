<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.th3pl4gu3.locky">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_safebox"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_safebox_round"
        android:supportsRtl="true"
        android:theme="@style/Locky.Theme">
        <activity
            android:name=".ui.main.login.splash.SplashActivity"
            android:theme="@style/Locky.Theme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.login.login.LoginActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name=".ui.main.main.MainActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>