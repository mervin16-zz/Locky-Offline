<resources>

    <!-- ======================== -->
    <!-- Application's Base Theme -->
    <!-- ======================== -->
    <style name="Locky.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Base Theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorAccentDark">@color/colorAccentDark</item>
        <item name="colorAccentLight">@color/colorAccentLight</item>
        <item name="colorRipple">@color/colorRipple</item>
        <item name="android:listDivider">@android:color/transparent</item>

        <!-- Default background screen -->
        <item name="android:windowBackground">@color/colorOnSurface</item>

        <!-- Overflow icon (More Options) Theme -->
        <item name="actionOverflowButtonStyle">@style/Locky.Icon.Overflow</item>

        <!-- Prevents multi-finger touch events -->
        <item name="android:splitMotionEvents">false</item>

        <!-- Status and navigation bar colors -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">@bool/theme_status_bar_light</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

        <!-- Navigation Drawer -->
        <item name="colorNavigationItem">@color/color_state_drawer_item</item>
        <item name="colorNavigationItemSelected">@android:color/white</item>
        <item name="drawableNavigationItemBackground">@drawable/custom_drawer_background</item>

        <!-- Menu Hamburger icon styles -->
        <item name="drawerArrowStyle">@style/Locky.Icon.Drawer.Hamburger</item>

        <!-- Alert Dialog Theme-->
        <item name="materialAlertDialogTheme">@style/Locky.MaterialAlertDialog</item>

        <!-- Date Picker Calendar Theme -->
        <item name="materialCalendarTheme">@style/Locky.MaterialDatePicker</item>

        <!-- Settings Preferences Theme -->
        <item name="preferenceTheme">@style/Locky.PreferenceTheme</item>

        <!-- Chips Style -->
        <item name="chipStyle">@style/Locky.Button.Chip</item>

        <!-- Card Style -->
        <item name="materialCardViewStyle">@style/Locky.CardView</item>

        <!-- Bottom Sheet Dialog Fragment Theme -->
        <item name="bottomSheetDialogTheme">@style/Locky.BottomSheetDialog.Theme</item>
    </style>

    <!-- ====================== -->
    <!-- Splash Launcher Theme -->
    <!-- ====================== -->
    <style name="Locky.Theme.Launcher" parent="Locky.Theme">
        <item name="android:windowBackground">@drawable/custom_background_launcher</item>
    </style>


    <!-- ========================== -->
    <!-- Material Custom Components -->
    <!-- ========================== -->

    <!-- Shape Cutout-->
    <style name="Locky.ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Locky.ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="Locky.ShapeAppearance.App.MediumComponent.Rounded">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Locky.ShapeAppearance.BottomSheet" parent="@style/Locky.ShapeAppearance.App.MediumComponent.Rounded">
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopRight">6dp</item>
        <item name="cornerSizeTopLeft">6dp</item>
    </style>

    <!-- Navigation View Style -->
    <style name="Locky.Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

    <!-- Global Icons -->
    <style name="Locky.Icon.Drawer.Hamburger" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorIcon</item>
    </style>

    <style name="Locky.Icon.Overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorIcon</item>
    </style>

    <!-- Material Dialog -->
    <style name="Locky.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/Locky.MaterialAlertDialog.App</item>
        <item name="buttonBarPositiveButtonStyle">@style/Locky.Button.TextButton.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Locky.Button.TextButton.Negative</item>
    </style>

    <style name="Locky.MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/Locky.ShapeAppearance.App.MediumComponent</item>
    </style>

    <!-- Material Date Picker -->
    <style name="Locky.MaterialDatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:windowFullscreen">false</item>
        <item name="materialCalendarStyle">@style/Locky.MaterialDatePicker.Style</item>
        <item name="buttonBarPositiveButtonStyle">@style/Locky.Button.TextButton.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Locky.Button.TextButton.Negative</item>
    </style>

    <style name="Locky.MaterialDatePicker.Style" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="shapeAppearance">@style/Locky.ShapeAppearance.App.MediumComponent.Rounded</item>
    </style>

    <!-- Settings Preferences -->
    <style name="Locky.PreferenceTheme" parent="PreferenceThemeOverlay">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <!-- Material Card -->
    <style name="Locky.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">1dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <!-- Bottom Sheet Dialog Fragment -->
    <style name="Locky.BottomSheetDialog.Theme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@color/colorOnSurface</item>
        <item name="android:navigationBarDividerColor">@color/colorOnSurface</item>
        <item name="bottomSheetStyle">@style/Locky.BottomSheetDialog.Style</item>
    </style>

    <style name="Locky.BottomSheetDialog.Style" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/Locky.ShapeAppearance.BottomSheet</item>
    </style>

    <!-- ===================== -->
    <!-- Text field Styles -->
    <!-- ===================== -->

    <!-- Default Text Field Style -->
    <style name="Locky.TextBox.Default" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Main Styles-->
        <item name="android:theme">@style/Locky.TextBox.TextAppearance</item>
        <item name="hintTextColor">@color/colorTextFieldTextDefault</item>
        <item name="startIconTint">@color/colorTextFieldIconDefault</item>
        <item name="endIconTint">@color/colorTextFieldIconDefault</item>
        <item name="counterMaxLength">150</item>

        <!-- Error Fields Styles-->
        <item name="boxStrokeErrorColor">@color/colorTextFieldErrorDefault</item>
        <item name="errorIconTint">@color/colorTextFieldErrorDefault</item>
        <item name="errorTextColor">@color/colorTextFieldErrorDefault</item>
    </style>

    <!-- Default Text Field Text Appearance Style -->
    <style name="Locky.TextBox.TextAppearance" parent="Widget.Design.TextInputLayout">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:fontFamily">@font/rubik_medium</item>

        <item name="android:textColorHint">@color/colorTextFieldIconDefault</item>
        <item name="android:textColor">@color/colorTextFieldTextDefault</item>
        <item name="android:textSize">13sp</item>

        <item name="shapeAppearanceSmallComponent">@style/Locky.ShapeAppearance.App.SmallComponent
        </item>
    </style>

    <!-- Search Text Field Style -->
    <style name="Locky.TextBox.Default.Search">
        <item name="boxStrokeColor">@color/colorTextFieldAccentSearch</item>
        <item name="android:background">@drawable/custom_background_edittext_search</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/colorTextFieldAccentSearch</item>
        <item name="android:textColor">@color/colorTextFieldAccentSearch</item>
        <item name="android:textColorHint">@color/colorTextFieldAccentSearch</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!-- ======================= -->
    <!-- Material Button Styles -->
    <!-- ======================= -->

    <!-- Floating Action Buttons -->
    <style name="Locky.FloatingActionButton.Normal" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorFabNormal</item>
        <item name="fabSize">normal</item>
        <item name="borderWidth">0dp</item>
        <item name="tint">@color/colorIconFabNormal</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <style name="Locky.FloatingActionButton.Mini" parent="Locky.FloatingActionButton.Normal">
        <item name="backgroundTint">@color/colorFabMini</item>
        <item name="tint">@color/colorIconFabMini</item>
        <item name="elevation">8dp</item>
        <item name="fabSize">mini</item>
    </style>

    <style name="Locky.FloatingActionButton.Normal.Display">
        <item name="elevation">0dp</item>
        <item name="android:clickable">false</item>
    </style>


    <!-- Material Buttons -->
    <style name="Locky.Button.Theme" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceSmallComponent">@style/Locky.ShapeAppearance.App.SmallComponent
        </item>
    </style>

    <style name="Locky.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">11sp</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="iconTint">@android:color/white</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="elevation">12dp</item>
    </style>

    <style name="Locky.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorButtonTextAccentDark</item>
        <item name="android:textSize">12sp</item>
        <item name="rippleColor">@color/colorRipple</item>
    </style>

    <style name="Locky.Button.TextButton.Positive">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Locky.Button.TextButton.Negative">
        <item name="android:textColor">@color/colorButtonTextNegative</item>
    </style>

    <style name="Locky.Button.TextButton.Icon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/colorButtonTextAccentDark</item>
        <item name="android:textColor">@color/colorButtonTextAccentDark</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Locky.Button.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/color_state_chip_item_text</item>
        <item name="chipBackgroundColor">@color/color_state_chip_item_background</item>
        <item name="rippleColor">@color/colorRipple</item>
        <item name="chipCornerRadius">5dp</item>
    </style>

    <style name="Locky.Button.TextButton.Icon.MenuItem">
        <item name="iconGravity">start</item>
        <item name="android:textAlignment">textStart</item>
        <item name="iconPadding">12dp</item>
    </style>


    <!-- ======================== -->
    <!-- ====== Typography ====== -->
    <!-- ======================== -->
    <style name="Locky.Text.Title6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>

    <style name="Locky.Text.Title5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>

    <style name="Locky.Text.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorTextSubtitle</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Locky.Text.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorTextBody</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Locky.Text.Caption" parent="TextAppearance.MaterialComponents.Caption" />

    <style name="Locky.Text.Subtitle.Smaller">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Locky.Text.Title6.Splash">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Locky.Text.Subtitle.Splash">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Locky.Text.Title6.Toolbar">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Locky.Text.Title6.Drawer">
        <item name="fontFamily">@font/musket_regular</item>
        <item name="android:fontFamily">@font/musket_regular</item>
        <item name="android:textColor">@color/colorTextTitleToolbar</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Locky.Text.Body.Drawer" />

    <style name="Locky.Text.Title6.List">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Locky.Text.Subtitle.List" />

    <style name="Locky.Text.Subtitle.List.Primary">
        <item name="android:textColor">@color/grey_400</item>
    </style>

    <style name="Locky.Text.Subtitle.List.Secondary">
        <item name="android:textColor">@color/grey_200</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Locky.Text.Subtitle.Terms">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Locky.Text.Subtitle.Label">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Locky.Text.Title5.Name" />

    <style name="Locky.Text.Title6.BottomSheet">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Locky.Text.Caption.CardTitle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="Locky.Text.Caption.Copyright">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

</resources>
