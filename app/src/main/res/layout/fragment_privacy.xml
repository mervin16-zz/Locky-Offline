<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/screen_padding_horizontal"
        android:paddingEnd="@dimen/screen_padding_horizontal"
        android:paddingBottom="8dp">

        <TextView
            style="@style/Locky.Text.Subtitle.Terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/app_terms_title_privacy" />

        <TextView
            style="@style/Locky.Text.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/app_terms_message_privacy" />

        <TextView
            style="@style/Locky.Text.Subtitle.Terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/app_terms_title_user_data" />

        <TextView
            style="@style/Locky.Text.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/app_terms_message_user_data" />

        <TextView
            style="@style/Locky.Text.Subtitle.Terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/app_terms_title_disclaimer" />

        <TextView
            style="@style/Locky.Text.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/app_terms_message_disclaimer" />

        <TextView
            style="@style/Locky.Text.Subtitle.Terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/app_terms_title_copyright" />

        <TextView
            style="@style/Locky.Text.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/app_terms_message_copyright" />

        <TextView
            style="@style/Locky.Text.Subtitle.Terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/app_terms_title_legal" />

        <TextView
            style="@style/Locky.Text.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/app_terms_message_legal" />


        <TextView
            style="@style/Locky.Text.Caption.Copyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/app_terms_copyright"
            android:textAlignment="center" />

    </LinearLayout>

</layout>