<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ViewModel"
            type="com.th3pl4gu3.locky.ui.main.add.account.AddAccountViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <!--****************************** LOGO ****************************** -->
        <ImageView
            android:id="@+id/Account_Logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            bindUrlImage="@{ViewModel.logoUrl}"
            tools:src="@drawable/image_placeholder_logo" />

        <ImageButton
            android:id="@+id/Account_Log_Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:background="?android:selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_edit" />


        <!--****************************** Required Label ****************************** -->
        <TextView
            android:id="@+id/Label_Required"
            style="@style/Locky.Text.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/label_required" />

        <!--****************************** Name Text field ****************************** -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Account_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/field_account_name"
            app:startIconDrawable="@drawable/ic_profile"
            app:endIconMode="clear_text"
            style="@style/Locky.TextBox.Default">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:text="@={ViewModel.accountName}" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--****************************** Username Text field ****************************** -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Account_Username"
            style="@style/Locky.TextBox.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/field_account_username"
            app:startIconDrawable="@drawable/ic_profile"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="@={ViewModel.username}" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--****************************** Email Text field ****************************** -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Account_Email"
            style="@style/Locky.TextBox.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/field_account_email"
            app:startIconDrawable="@drawable/ic_email"
            app:endIconMode="clear_text"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:text="@={ViewModel.email}" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--****************************** Password Text field ****************************** -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Account_Password"
            style="@style/Locky.TextBox.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="@string/field_account_password"
            app:startIconDrawable="@drawable/ic_account"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:text="@={ViewModel.password}" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--****************************** Website Text field ****************************** -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Account_Website"
            style="@style/Locky.TextBox.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/field_account_website"
            app:startIconDrawable="@drawable/ic_web"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textWebEditText"
                android:text="@={ViewModel.website}" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--****************************** Optional Label ****************************** -->
        <TextView
            android:id="@+id/Label_Optional"
            style="@style/Locky.Text.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/label_optional" />


        <!--****************************** 2FA Enabled Text field ****************************** -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Account_2FA_Enabled"
            style="@style/Locky.TextBox.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/field_account_authentication_type">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textShortMessage|textCapWords"
                android:text="@={ViewModel.twoFa}" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--****************************** 2FA Secret Keys Text field ****************************** -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Account_2FA_Keys"
            style="@style/Locky.TextBox.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/field_account_2fakeys"
            app:startIconDrawable="@drawable/ic_key"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:text="@={ViewModel.twoFaKeys}"
                android:maxLines="15"
                android:minLines="2" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--****************************** Additional Comments Text field ****************************** -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Account_Comments"
            style="@style/Locky.TextBox.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/field_account_additional">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences"
                android:text="@={ViewModel.accountMoreInfo}"
                android:maxLines="15"
                android:minLines="2" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--****************************** Save Button ****************************** -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Button_Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/button_action_save"
            android:onClick="@{() -> ViewModel.save()}"
            android:theme="@style/Locky.Button.Theme"
            app:icon="@drawable/ic_save"
            style="@style/Locky.Button.Filled" />

    </LinearLayout>

</layout>